        "default": true
      },
      {
        "type": "color",
        "id": "icon_color",
        "label": "Icon color",
        "default": "#2879fe",
		"info": "Not image"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title color",
        "default": "#191919"
      },
      {
        "type": "color",
        "id": "desc_color",
        "label": "Description color",
        "default": "#777777"
      },
      {
        "type": "color",
        "id": "title_hover_color",
        "label": "Title hover color",
        "default": "#2879fe"
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "checkbox",
        "id": "use_background",
        "label": "Use background",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "background_boxed",
        "label": "Boxed background",
        "default": false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#f7f8fa"
      }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Banner",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "select",
          "id": "show_icon",
          "label": "Icon settings",
          "options": [
            { "value": "icon", "label": "Use font icon" },
            { "value": "image", "label": "Use image" },
            { "value": "none", "label": "Hide icon" }
          ],
          "default": "icon"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Wokiee icon",
          "default": "icon-f-48",
		  "info": "[Wokiee Icons](\/\/portotheme.com\/shopify\/wokiee\/icons)"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image instead of icon",
          "info": "Image size 50x50px. Use *.png image"
        },
        {
          "type": "text",
          "id": "text1",
          "label": "Title",
          "default": "FREE SHIPPING"
        },
        {
          "type": "textarea",
          "id": "text2",
          "label": "Content",
		  "default": "Free shipping on all US order or order above $99"
        },
        {
          "type": "header",
          "content": "Colors"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Icon color",
          "default": "#2879fe",
          "info": "Not image. Uncheck \"Use same icon color\""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Banners",
      "category": "Banner",
        "blocks": [
          {
            "type": "item",
            "settings": {
              "icon": "icon-f-48",
              "text1": "FREE SHIPPING",
