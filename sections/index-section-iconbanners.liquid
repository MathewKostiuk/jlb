{%- assign item = section.settings -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent {{ item.custom_classes }}"{% if item.use_background and item.background_boxed == false %} style="background:{{ item.background_color }}"{% endif %}>
  <div class="container{% if item.fullwidth %}-fluid{% endif %}">
    <div class="row{% if item.items_always_in_center %} justify-content-center{% endif %} tt-services-listing{% if item.use_background %} tt-layout-02{% endif %}"{% if item.use_background and item.background_boxed %} style="background:{{ item.background_color }}"{% endif %}>
      {%- if section.blocks.size > 0 -%}
      {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
      <div class="col-xs-12 col-md-6 col-lg-{{ item.items }}" {{ block.shopify_attributes }}>
        <a href="{{ b_i.link }}" class="tt-services-block" data-hovercolors>
          {%- if b_i.show_icon != 'none' -%}
          <div class="tt-col-icon">
            {%- if b_i.show_icon == 'image' -%}
            <img src="{{ b_i.image | img_url: '60x' }}" alt="{{ b_i.image.alt }}">
            {%- else -%}
            <i class="{{ b_i.icon }}" style="color: {% if item.same_iconcolor %}{{ item.icon_color }}{% else %}{{ b_i.icon_color }}{% endif %}"></i>
            {%- endif -%}
          </div>
          {%- endif -%}
          <div class="tt-col-description">
            <h4 class="tt-title" style="color:{{ item.title_color }};" data-c="{{ item.title_color }}" data-ac="{{ item.title_hover_color }}">{{ b_i.text1 }}</h4>
            {% unless b_i.text2 == '' %}<p style="color: {{ item.desc_color }}">{{ b_i.text2 }}</p>{% endunless %}
          </div>
        </a>
      </div>
      {%- endfor -%}
      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Icon Banners",
  "class": "index-section",
  "settings": [
      {
        "type": "select",
        "id": "top_offset",
        "label": "Top Offset",
        "default": "normal",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
