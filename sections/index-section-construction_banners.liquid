            {%- capture img_size -%}{% if item.fullwidth %}1024x{% else %}600x{% endif %}{%- endcapture -%}
            {%- assign b_i = section.blocks[2].settings -%}{% include 'section-banner-item' %}
          </div>
        </div>
      </div>

      {%- when 5 -%}

      <div class="col-md-3">
        {%- capture info_image_size -%}455x390px{%- endcapture -%}
        {%- capture img_size -%}{% if item.fullwidth %}600x{% else %}300x{% endif %}{%- endcapture -%}
