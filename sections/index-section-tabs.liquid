{%- assign item = section.settings -%}
<div class="{% if item.top_offset == 'none' %}nomargin {% elsif item.top_offset == 'small' %}tt-offset-small {% endif %}container-indent" data-sectionname="index_horizontaltabs">
  <div class="container{% if item.fullwidth %}-fluid-custom{% endif %} container-fluid-custom-mobile-padding">

    {% if item.show_title %}<div class="tt-block-title text-left">
      <h2 class="tt-title">{{ item.text1 }}</h2>
    </div>{% endif %}
    {% if item.show_title %}<div class="tt-tab-wrapper">{% endif %}

      <ul class="nav nav-tabs tt-tabs-default" role="tablist">
        {%- for block in section.blocks -%}
        <li class="nav-item">
          <a href="#{{ section.id }}{{ forloop.index }}" class="nav-link{% if forloop.first %} active{% endif %}" data-toggle="tab" role="tab">{{ block.settings.tab_name }}</a>
        </li>
        {%- endfor -%}
      </ul>

      <div class="tab-content">
        {%- for block in section.blocks -%}
        {%- assign name_collection = block.settings.collection -%}
        {%- if name_collection == blank -%}{%- assign name_collection = "all" -%}{%- endif -%}
        {%- assign collection = collections[name_collection] -%}
        <div id="{{ section.id }}{{ forloop.index }}" class="tab-pane{% if forloop.first %} active{% endif %}" role="tabpanel" {{ block.shopify_attributes }}>
          {%- if block.type == 'item2' -%}
          <div class="row tt-layout-product-item">
            {%- for product in collection.products limit:block.settings.limit -%}
            <div class="col-6 col-md-4 col-lg-{{ block.settings.toshow }}">
              {% include "product-grid-item" %}
            </div>
            {%- endfor -%}
          </div>
          {%- if block.settings.showbtn -%}
          <div class="text-center tt_product_showmore">
            <a href="collections/{{ collection.handle }}" class="btn btn-border">{{ block.settings.btnname }}</a>
          </div>
          {%- endif -%}
          {%- else -%}
          {%- assign slider_mode = true -%}
          <div class="tt-carousel-products-js row arrow-location-tab{% unless item.show_title %} no-title{% endunless %} tt-alignment-img tt-layout-product-item slick-animated-show-js" data-slick='{"slidesToShow": {{ block.settings.toshow }}, "slidesToScroll": {{ block.settings.step }}, "autoplay": {{ block.settings.module_autoplay }}, "autoplaySpeed": {{ block.settings.delay_time }}}' {{ block.shopify_attributes }}>
            {%- for product in collection.products limit:block.settings.limit -%}
            <div class="col-6 col-md-4 col-lg-{{ block.settings.toshow }}">
              {% include "product-grid-item" %}
            </div>
            {%- endfor -%}
          </div>
          
          {%- endif -%}
        </div>
        {%- endfor -%}
      </div>

    {%- if item.show_title -%}</div>{%- endif -%}
  </div>
</div>
	


